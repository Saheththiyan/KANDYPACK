{
  "env": {
    "node": true,
    "es2022": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "prefer-const": "error",
    "no-var": "error",
    "eqeqeq": "error",
    "curly": "error",
    
    // Ignore formatting/style issues
    "no-console": "off",
    "no-trailing-spaces": "off", 
    "indent": "off",
    "quotes": "off",
    "semi": "off",
    
    // Keep unused vars checking but allow _ prefix
    "no-unused-vars": ["warn", { 
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_"
    }]
  }
}